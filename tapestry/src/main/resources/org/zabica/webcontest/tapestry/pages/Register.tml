<html t:type="layout" title="${message:register.title}"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      <t:form  method="post" class="form-horizontal" t:id="register">
      		<t:errors />
      		<div class="form-group">
				<t:label class="col-sm-4 control-label" t:for="nameField">
					${message:register.name}
				</t:label>
				<div class="col-sm-8">
					<t:textfield class="form-control" t:id="nameField" t:value="name" t:validate="required,minlength=2" placeholder="${message:register.name}"></t:textfield>
				</div>
			</div>
			<div class="form-group">
				<t:label class="col-sm-4 control-label" t:for="surnameField">
					${message:register.surname}
				</t:label>
				<div class="col-sm-8">
					<t:textfield class="form-control" t:id="surnameField" t:value="surname" t:validate="required,minlength=2" placeholder="${message:register.surname}"></t:textfield>
				</div>
			</div>
			<div class="form-group">
				<t:label class="col-sm-4 control-label" t:for="emailField">
					${message:register.email}
				</t:label>
				<div class="col-sm-8">
					<t:textfield class="form-control" t:id="emailField" t:value="email" t:validate="required,regexp" placeholder="${message:register.email}"></t:textfield>
				</div>
			</div>
			<div class="form-group">
				<t:label class="col-sm-4 control-label" t:for="passwordField">
					${message:register.password}
				</t:label>
				<div class="col-sm-8">
					<t:passwordfield class="form-control" t:id="passwordField" t:value="password" t:validate="required,minlength=4" placeholder="${message:register.password}"></t:passwordfield>
				</div>
			</div>
			<div class="form-group">
				<t:label class="col-sm-4 control-label" t:for="repeatPasswordField">
					${message:register.repassword}
				</t:label>
				<div class="col-sm-8">
					<t:passwordfield class="form-control" t:id="repeatPasswordField" t:value="repeatPassword" t:validate="required,minlength=4" placeholder="${message:register.repassword}"></t:passwordfield>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<t:submit class="btn btn-default" value="${message:register.submit}"></t:submit>
				</div>
			</div>
		</t:form>
</html>